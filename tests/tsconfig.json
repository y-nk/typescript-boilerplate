{
  "include": [".", "../src/"],

  "compilerOptions": {
    "baseUrl": "../",

    "paths": {
      "@/*": ["src/*"]
    },

    "module": "commonjs",
    "target": "es5",

    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "stripInternal": true,
  }
}
